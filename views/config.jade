extends config_layout

block title
  = "Config"

block content
  h1
    Shmile Config #{currentTemplate}

  div.row
    form(action='/config',method='post')
      div.form-group
        label(for='current_template') Template
        select.form-control.custom-select(id='currentTemplate', name='currentTemplate')
          each template in templates
            option(selected=(currentTemplate == template),value=template) #{template}

      div.form-group
          input(id='printerEnabled',type='checkbox',name='printerEnabled', checked=(config.printer_enabled))
          label Printing enabled?
      div.form-group
          input(id='optionalPrinting',type='checkbox',name='optionalPrinting',checked=(config.optional_printing))
          label Is printing optional?
      div.form-group
        label(for='print_finish') Print finish
        select.form-control.custom-select(id='printFinish', name='printFinish')
          each finish in finishes
            option(selected=(config.print_finish == finish),value=finish) #{finish}

      button.btn.btn-primary(type=sumit) Save

  div.row

    form(method="post", enctype="multipart\/form-data", action="/fileUpload")

      p Image:
          input(type="file", name="overlay")
      p
          input(type="submit", value="upload")
